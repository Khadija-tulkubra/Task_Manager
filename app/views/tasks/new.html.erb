<div class="container mt-5">
  <h2>Create New Task</h2>
  
  <%= form_with model: @task, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :title, class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3">
      <%= form.label :priority, class: "form-label" %>
      <%= form.select :priority, ['Low', 'Medium', 'High'], {}, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= form.label :status, class: "form-label" %>
      <%= form.select :status, ['Pending', 'Completed'], {}, class: "form-select" %>
    </div>

    <div class="mb-3">
        
  <%= form.label :deadline, "Deadline", class: "form-label" %>
  <%= form.date_field :deadline, class: "form-control" %>


    </div>

    <div class="mb-3">
      <%= form.label :assignee_id, "Assign To", class: "form-label" %>
      <%= form.collection_select :assignee_id, User.where(role: 'user'), :id, :email, { prompt: "Select User" }, class: "form-select" %>

    </div>

    <%= form.submit "Create Task", class: "btn btn-primary" %>
  <% end %>
</div>
