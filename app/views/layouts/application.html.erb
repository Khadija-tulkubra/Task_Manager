<!DOCTYPE html>
<html>
  <head>
  <title>Task Management System</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>


  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
<%= csrf_meta_tags %>


  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">


<style>
  body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-color: #f0f2f5; /* Light grayish background */
  }

  /* Sidebar styling */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;        /* full viewport height */
    width: 220px;         /* sidebar width */
    background-color: #343a40; /* dark gray */
    color: white;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 15px;
    z-index: 1000;
  }

  .sidebar .logo {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* Sidebar links */
  .sidebar a {
    color: white;
    text-decoration: none;
    font-size: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .sidebar a:hover {
    background-color: #495057;
  }

  /* Main content shifted right by sidebar width + margin */
  .main-content {
    margin-left: 240px;  /* 220px sidebar + 20px margin */
    padding: 20px;
  }
</style>

</head>


  <body style="font-family: 'Roboto', sans-serif;">

    <div class="sidebar">
  <div class="logo">
    <i class="fas fa-tasks"></i> <span>TaskManager</span>
  </div>

  <% unless current_page?(root_path) %>  <!-- Agar root page nahi hai tabhi yeh show karo -->
    <% if user_signed_in? %>
      <%= link_to root_path do %>
        <i class="fas fa-chart-line"></i> HomePage
      <% end %>

   

     

<%= button_to destroy_user_session_path,
              method: :delete,
              data: { confirm: "Are you sure you want to sign out?" },
              class: "block px-4 py-2 hover:rounded hover:bg-gray-700 flex items-center" do %>
  <i class="fa-solid fa-sign-out mr-2"></i>
  <span class="hidden md:inline-block">Sign out</span>
<% end %>



    <% else %>
      <%= link_to new_user_registration_path do %>
        <i class="fas fa-user-plus"></i> Sign Up
      <% end %>

      <%= link_to new_user_session_path do %>
        <i class="fas fa-sign-in-alt"></i> Login
      <% end %>
    <% end %>
  <% end %>
</div>


  <!-- ✅ Main Content Area -->
  <div class="main-content">
    <div class="glass-card">
      <%= yield %>
    </div>
  </div>
  <!-- Flash messages yahan dikhayein -->
<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin: 10px 10px 10px 240px;">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin: 10px 10px 10px 240px;">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


  

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
