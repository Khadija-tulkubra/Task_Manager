<!DOCTYPE html>
<html>
  <head>
  <title>Task Management System</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= csrf_meta_tags %>


  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
<%= csrf_meta_tags %>


  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">


<style>
  body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-color: #f0f2f5; /* Light grayish background */
  }

  /* Sidebar styling */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;        /* full viewport height */
    width: 220px;         /* sidebar width */
    background-color: #343a40; /* dark gray */
    color: white;
    padding: 20px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: 15px;
    z-index: 1000;
  }

  .sidebar .logo {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* Sidebar links */
  .sidebar a {
    color: white;
    text-decoration: none;
    font-size: 18px;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 12px;
    border-radius: 4px;
    transition: background-color 0.3s ease;
  }

  .sidebar a:hover {
    background-color: #495057;
  }

  /* Main content shifted right by sidebar width + margin */
  .main-content {
    margin-left: 240px;  /* 220px sidebar + 20px margin */
    padding: 20px;
  }
</style>

</head>


  <body style="font-family: 'Roboto', sans-serif;">

  <div class="sidebar bg-gray-800 text-white min-h-screen p-4 w-64 space-y-4">
  <div class="logo text-xl font-bold mb-6 flex items-center gap-2">
    <i class="fas fa-tasks text-yellow-400"></i> 
    <span>TaskManager</span>
  </div>

  <!-- Always show Home -->
  <%= link_to root_path, class: "block px-4 py-2 rounded hover:bg-gray-700 flex items-center gap-2" do %>
    <i class="fas fa-home"></i> <span>Home</span>
  <% end %>

  <% if user_signed_in? || admin_signed_in? %>
    <!-- Logout button for both admin and user -->
    <%= button_to destroy_user_session_path, method: :delete,
        data: { confirm: "Are you sure you want to sign out?" },
        class: "block w-full text-left px-4 py-2 rounded hover:bg-red-600 flex items-center gap-2" do %>
      <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
    <% end %>
  <% end %>
</div>




  <!-- ✅ Main Content Area -->
  <div class="main-content">
    <div class="glass-card">
      <%= yield %>
    </div>
  </div>
  <!-- Flash messages yahan dikhayein -->
<% if notice %>
  <div class="alert alert-success alert-dismissible fade show" role="alert" style="margin: 10px 10px 10px 240px;">
    <%= notice %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin: 10px 10px 10px 240px;">
    <%= alert %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>


  

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

